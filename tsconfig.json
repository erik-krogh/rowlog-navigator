{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "es6",
    "lib": ["dom", "ES2021"],
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "NodeNext",
    "noImplicitAny": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "strictNullChecks": false
  },
  "include": ["src/**/*.ts", "test/**/*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
